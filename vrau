#include <stdio.h>
#include "bit_ops.h"

unsigned get_bit(unsigned x,unsigned n){
  x >>= n;
  x &= 0x01;
    return x;
}
void set_bit(unsigned *x,unsigned n,unsigned v){
  int z = 0x01;
  z <<= n;
  if(v == 0){
    *x &= ~(z);
  }
  else{
    *x |= z;
  }
}
void flip_bit(unsigned *x,unsigned n){
  int z = 0x01;
  z <<= n;
  *x ^= z;
}

